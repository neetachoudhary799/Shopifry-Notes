              <div class="customer_address_div {% if forloop.index == 3 %}address_book{% endif %}">
                {% if address == customer.default_address %}
                  <h6 class="address_heading"><strong>Default</strong></h6>
                {% endif %}
                {{ address | format_address }}
    
                <a href="#" class=" small_text moss border_moss" id="edit_address_cultiver" data-form-id="{{ address.id }}">Edit</a> 
                <a href="#" class="delete_address_icon small_text moss border_moss" data-form-id="{{ address.id }}"  data-confirm-message="Are you sure you wish to delete this address?"> Delete</a>

              </div>
              </div>
            {% endfor %}
