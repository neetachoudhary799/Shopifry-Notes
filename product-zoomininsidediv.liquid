{%- assign img_count = product.media.size -%}
<div class="row product_imgaes_desktop desktop_device">
{% for image in product.images %}
    <div class="col-12  {% if img_count == 1 %} col-lg-12 {% else %} col-lg-6 {% endif %}">
      <div class="cultiver_image" data-scale="1.6" >
        <img class="img-fluid"
                                            src="{{ image.src | img_url: 'master' }}"
                                            data-sizes="auto"
                                            {{ attribute_prefix }} src="{{ image.src | img_url: '10x' }}"
                                            {{ attribute_prefix }} data-src="{{ image.src | img_url: '302x' }}"
                                            {{ attribute_prefix }} class-lazyload="{{image.src}}"
                                            {{ attribute_prefix }} alt="{{image.src}}" class="blur-up fade-in"
                                            {{ attribute_prefix }} if="{{image.src}}"
                                        />
      </div>
    </div>
{% endfor %}
</div>
<script>
$('.product_imgaes_desktop .cultiver_image')
    // tile mouse actions
    .on('mouseover', function(){
      $(this).children('img').css({'transform': 'scale('+ $(this).attr('data-scale') +')'});
    })

    .on('mouseout', function(){
      $(this).children('img').css({'transform': 'scale(1)'});
    })
    .on('mousemove', function(e){
      $(this).children('img').css({'transform-origin': ((e.pageX - $(this).offset().left) / $(this).width()) * 100 + '% ' + ((e.pageY - $(this).offset().top) / $(this).height()) * 100 +'%'});
    });
  
  });
</sript>
<style>
  .cultiver_product_page .cultiver_image:hover {
    cursor: url(https://cdn.shopify.com/s/files/1/0173/3246/files/product_zoom_in.png?v=1720703918), auto;
}

</style>
